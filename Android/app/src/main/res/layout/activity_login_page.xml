<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Page"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_hor_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".20"/>
    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/android_heading"
        android:layout_marginTop="20sp"
        android:layout_marginHorizontal="20sp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_hor_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".25"
        />

    <TextView
        android:id="@+id/etLoginName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:padding="10sp"
        android:text="Welcome to Login Page!"
        android:textColor="@color/green"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent+"
        app:layout_constraintBottom_toBottomOf="@+id/guide_hor_25"
        />


    <EditText
        android:id="@+id/etName"
        android:hint="@string/enter_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintStart_toStartOf="@+id/guide_hor_25"
        app:layout_constraintEnd_toEndOf="@+id/guide_hor_25"
        app:layout_constraintTop_toTopOf="@+id/guide_hor_25"

        />

 <EditText
     android:id="@+id/etPass"
     android:hint="@string/enter_password"
     android:layout_marginTop="10sp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginHorizontal="20sp"
     app:layout_constraintTop_toBottomOf="@+id/etName"
     app:layout_constraintStart_toStartOf="@+id/etName"
     app:layout_constraintEnd_toEndOf="@+id/etName"
     />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="5sp"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintTop_toBottomOf="@+id/etPass"
        app:layout_constraintStart_toendOf="@+id/etPass"
        android:layout_marginTop="50sp"
        android:backgroundTint="@color/green"
        />

    <TextView
        android:id="@+id/login_fb_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="or sign up with"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="@+id/btnLogin"
        app:layout_constraintEnd_toEndOf="@+id/btnLogin"
        android:textSize="30sp"
        android:layout_marginBottom="20sp"
        />


    <LinearLayout
        android:id="@+id/ll_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/login_fb_x"
        app:layout_constraintStart_toStartOf="@+id/login_fb_x"
        app:layout_constraintEnd_toEndOf="@+id/login_fb_x"
        >

        <ImageView
            android:id="@+id/googlelogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/facebook"
            />

        <ImageView
            android:id="@+id/fblogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/google"
            />

        <ImageView
            android:id="@+id/twitterlogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/twitter"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/dont_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_logo"
        app:layout_constraintStart_toStartOf="@+id/ll_logo"
        app:layout_constraintEnd_toEndOf="@+id/ll_logo"
        android:text="Don't have an account?"
        android:layout_marginTop="20sp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:text="Sign Up"
        app:layout_constraintTop_toTopOf="@id/ll_logo"
        app:layout_constraintEnd_toStartOf="@id/ll_logo"
        app:layout_constraintEnd_toEndOf="@id/ll_logo"
        />


</androidx.constraintlayout.widget.ConstraintLayout>